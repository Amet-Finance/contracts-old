{
  "name": "contracts",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "test": "npm run test-issuer-v2-custom",
    "compile-zcb-abi": "solcjs -o contracts/zcb-v1/artefacts/zcb/abi --abi --include-path node_modules/ --base-path . contracts/zcb-v1/ZeroCouponBondsV1_AmetFinance.sol",
    "compile-zcb-issuer-abi": "solcjs -o contracts/zcb-v1/artefacts/zcb-issuer/abi --abi --include-path node_modules/ --base-path . contracts/zcb-v1/ZeroCouponBondsIssuerV1_AmetFinance.sol",
    "compile-zcb-v2-abi": "solcjs -o contracts/zcb-v2/artefacts/zcb/abi --abi --include-path node_modules/ --base-path . contracts/zcb-v2/ZeroCouponBondsV1_AmetFinance.sol",
    "compile-zcb-v2-bin": "solcjs -o contracts/zcb-v2/artefacts/zcb/bin --bin --include-path node_modules/ --base-path . contracts/zcb-v2/ZeroCouponBondsV1_AmetFinance.sol",
    "compile-zcb-v2-issuer-abi": "solcjs -o contracts/zcb-v2/artefacts/zcb-issuer/abi --abi --include-path node_modules/ --base-path . contracts/zcb-v2/ZeroCouponBondsIssuerV1_AmetFinance.sol",
    "compile-zcb-v2-issuer-bin": "solcjs -o contracts/zcb-v2/artefacts/zcb-issuer/bin --bin --include-path node_modules/ --base-path . contracts/zcb-v2/ZeroCouponBondsIssuerV1_AmetFinance.sol",
    "compile-zcb-v2": "npm run compile-zcb-v2-issuer-abi && npm run compile-zcb-v2-issuer-bin",

    "test-issuer-v2-custom": "npm run compile-zcb-v2 && jest --runInBand",
    "prepare": "husky install"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.0",
    "ganache": "^7.9.1",
    "jest": "^29.7.0",
    "solc": "^0.8.21",
    "web3": "^1.10.0"
  },
  "devDependencies": {
    "husky": "^8.0.0"
  }
}
